<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Laboratory_Management_System.Views.DepartmentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModels ="clr-namespace:Laboratory_Management_System.ViewModels"
    xmlns:services ="clr-namespace:Laboratory_Management_System.Services"
    Title="Departments">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        
        <Button x:Name="AddDeptButton" 
                Clicked="OnAddDeptButtonClicked"
                Text="Add Department"/>
        
        <CollectionView x:Name="DeptCollection"
                        SelectionMode="Single"
                        SelectionChanged="OnDeptSelectionChanged">
            <CollectionView.BindingContext>
                <ViewModels:DepartmentViewModel/>
            </CollectionView.BindingContext>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Label Text="{Binding Name}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
    
</ContentPage>
